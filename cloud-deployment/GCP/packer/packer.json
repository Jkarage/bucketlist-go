{
	"variables": {
		"SERVICE_ACCOUNT_JSON": "../shared/terraform.json",
		"GO_SOURCE_CODE_PATH" : "{{env `GO_SOURCE_CODE_PATH`}}",
		"PROJECT_ID": "{{env `PROJECT_ID`}}",
		"GOPATH": "{{env `GOPATH`}}",
		"SSH_USER": "{{env `SSH_USER`}}",
		"ENV_NAME": "{{env `ENV_NAME`}}"
	},
	"builders": [
		{
			"type": "googlecompute",
			"project_id": "{{user `PROJECT_ID`}}",
			"machine_type": "n1-standard-1",
			"region": "europe-west1",
			"zone": "europe-west1-b",
			"ssh_username": "ubuntu",
			"image_description": "This is the AMI that holds my GO application",
			"source_image_family": "ubuntu-1604-lts",
			"image_name": "{{user `ENV_NAME`}}-go-app-image-{{timestamp}}",
			"disk_size": 10,
			"account_file": "{{user `SERVICE_ACCOUNT_JSON`}}",
			"startup_script_file": "start-app.sh"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"git clone https://github.com/davidmukiibi/bucketlist-go.git",
				"echo \"Cloning Go source code completed successfully.\""
			]
		},
		{
			"type": "shell",
			"inline": [
				"sudo apt-get update",
				"sudo apt-get install -y postgresql postgresql-contrib postgresql-client"
			]
		},
		{
			"type": "shell",
			"inline": [
				"sudo cp bucketlist-go/cloud-deployment/GCP/packer/setup_go.sh /etc/init.d/",
				"sudo chmod +x /etc/init.d/setup_go.sh"
			]
		}	
	]
}
