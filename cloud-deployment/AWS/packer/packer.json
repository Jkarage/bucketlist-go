{
	"variables": {
		"aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
		"aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
		"path_to_code": "{{env `GOPATH`}}"
	  },
	"builders": [
		{
			"access_key": "{{user `aws_access_key`}}",
			"secret_key": "{{user `aws_secret_key`}}",
			"region": "us-east-1",
			"type": "amazon-ebs",
			"ami_name": "go-app-{{timestamp}}",
			"instance_type": "t2.micro",
			"ssh_username": "ubuntu",
			"source_ami": "ami-076ec2571f2b41d48",
			"ami_description": "An AMI for my GO application as of: {{timestamp}}",
			"tags": {
				"language": "Go",
				"platform": "AWS", 
				"app": "Bucketlist",
				"Base_AMI_Name": "{{ .SourceAMIName }}"
			}
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"git clone https://github.com/davidmukiibi/bucketlist-go.git",
				"echo \"cloning the code completed successfully.\""
			]
		},
		{
			"type": "shell",
			"inline": "mkdir workdir/ && wget https://releases.hashicorp.com/packer/1.1.0/packer_1.1.0_linux_amd64.zip && unzip packer_1.1.0_linux_amd64.zip && sudo chmod +x packer && sudo mv packer /usr/local/bin/"
		},
		{
			"type": "shell",
			"inline": "sudo rm -rf workdir/"
		},
		{
			"type": "ansible-local",
			"playbook_file": "configure_go.yaml"
		},
		{
			"type": "shell",
			"inline": [
				"echo \"changing to app working directory\"",
				"cd bucketlist-go && chmod +x cloud-deployment/AWS/packer/setup-go.sh && ./cloud-deployment/AWS/packer/setup-go.sh"
			]
		},
		{
			"type": "shell",
			"inline": "cd bucketlist-go && chmod +x cloud-deployment/AWS/packer/start_app.sh"
		},
		{
			"type": "shell",
			"inline": "chmod +x bucketlist-go/cloud-deployment/AWS/packer/start_app.sh && sudo cp bucketlist-go/cloud-deployment/AWS/packer/start_app.sh /etc/init.d/"
		}
		
	]
}